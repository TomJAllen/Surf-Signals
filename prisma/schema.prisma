generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  attempts     Attempt[]
  sessions     StudySession[]
}

model Signal {
  id          String    @id @default(cuid())
  name        String    @unique
  description String
  imageUrl    String
  videoUrl    String?   // YouTube embed URL for the signal demonstration
  category    String    @default("beach-to-water") // "beach-to-water" | "water-to-beach"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  attempts    Attempt[]
}

model Attempt {
  id        String   @id @default(cuid())
  userId    String?  // Nullable for anonymous users
  sessionId String?  // Link to study session
  signalId  String
  mode      String   // "identify" | "perform"
  correct   Boolean
  createdAt DateTime @default(now())

  user    User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  session StudySession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  signal  Signal        @relation(fields: [signalId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionId])
  @@index([signalId])
}

model StudySession {
  id           String    @id @default(cuid())
  userId       String?   // Nullable for anonymous users
  mode         String    // "identify" | "perform"
  category     String?   // Filter applied: "beach-to-water" | "water-to-beach" | null for all
  totalCount   Int       // Total signals in session
  correctCount Int       @default(0)
  completedAt  DateTime? // Null if session is still in progress
  createdAt    DateTime  @default(now())

  user     User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  attempts Attempt[]

  @@index([userId])
}
